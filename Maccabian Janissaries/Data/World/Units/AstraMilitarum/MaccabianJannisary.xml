<?xml version="1.0" encoding="utf-8"?>
<unit dlc="Supplement1">
	<model>
		<unit mesh="Units/AstraMilitarum/TempestusScion"
				material="Units/AstraMilitarum/TempestusScion"
				idleAnimation="Units/AstraMilitarum/TempestusScionIdle"
				idleAnimationCount="3"
				idleContinuously="1"
				normalWeight="0.1"
				scale="1 1 1"
				bloodBone="BloodBone"
				walker="1"/>
	</model>
	<group size="8" rowSize="4" memberDeltaX="70" memberDeltaY="50"/>
	<weapons>
		<weapon name="MaccabianLasgun" slotName="Lasgun">
			<model>
				<beamWeapon muzzleBone=".Muzzle"
						fireInterval="0.3"/>
			</model>
		</weapon>
		<weapon name="MaccabianKrakGrenadeLauncher" slotName="KrakGrenadeLauncher" enabled="0">
			<model>
				<grenadeWeapon muzzleBone=".Muzzle"
						fireInterval="1.0"/>
			</model>			
		</weapon>
		<weapon name="MaccabianFragGrenadeLauncher" slotName="FragGrenadeLauncher" enabled="0">
			<model>
				<grenadeWeapon muzzleBone=".Muzzle"
						fireInterval="1.0"/>
			</model>			
		</weapon>
		<weapon name="MaccabianFireGrenadeLauncher" slotName="FireGrenadeLauncher" enabled="0">
			<model>
				<grenadeWeapon muzzleBone=".Muzzle"
						fireInterval="1.0"/>
			</model>
		</weapon>
		<weapon name="FragGrenade" slotName="FragGrenade" enabled="0">
			<model>
				<grenadeWeapon muzzleBone="BloodBone"/>
			</model>
		</weapon>
		<weapon name="KrakGrenade" slotName="KrakGrenade" enabled="0">
			<model>
				<grenadeWeapon muzzleBone="BloodBone"/>
			</model>
		</weapon>
	</weapons>
	<modifiers>
		<modifier visible="0">
			<!-- Jannisaries are T8; Scions, T4 -->
			<effects>
				<armor base="6"/> <!-- %armor base armor=4+ -->
				<foodUpkeep base="2.0"/> <!-- %foodUpkeep base tier=6 factor=1 -->
				<foodCost base="30.0"/> <!-- 20 | %foodCost base tier=6 factor=0.5 -->
				<hitpointsMax base="2.5"/> <!-- 2 | %hitpointsMax base toughness=3 wounds=1 -->
				<meleeAccuracy base="6"/> <!-- %meleeAccuracy base weaponSkill=3 -->
				<meleeAttacks base="1"/>
				<oreCost base="30.0"/> <!-- 20 | %oreCost base tier=6 factor=0.5 -->
				<strengthDamage base="1"/> <!-- %strengthDamage base strength=3 -->
				<moraleMax base="6"/> <!-- %moraleMax base leadership=6 -->
				<movementMax base="3"/>
				<productionCost base="42.0"/> <!-- 36 | %productionCost base tier=6 factor=1 -->
				<rangedAccuracy base="8"/> <!-- %rangedAccuracy base ballisticSkill=4 -->
			</effects>
		</modifier>
	</modifiers>
	<strategyModifiers>
		<modifier>
			<effects>
				<increaseInfantryScore base="1.0"/>
			</effects>
		</modifier>
	</strategyModifiers>
	<actions>
		<attack>
			<model>
				<action animation="Units/AstraMilitarum/TempestusScionAttack"
						beginFire="1.0" endFire="2.0"/>
			</model>				
		</attack>
		<die>
			<model>
				<action animation="Units/AstraMilitarum/TempestusScionDie"
						animationCount="2"
						sound="Units/MediumUnarmoredDie"
						soundCount="4"
						soundDelay="0.6"
						voiceSound="Units/AstraMilitarum/InfantryDie"
						voiceSoundCount="5"/>
			</model>		
		</die>
		<idle>
			<model>
				<action/>
			</model>
		</idle>
		<move>
			<model>
				<action animation="Units/AstraMilitarum/TempestusScionMove"
						sound="Units/AstraMilitarum/InfantryMove"
						soundCount="4"/>
			</model>
		</move>
		<!--
		<cycleWeapon interfaceSound="Interface/CycleWeapon" 
				weaponSlotNames="Lasgun KrakGrenadeLauncher FragGrenadeLauncher FireGrenadeLauncher"/>
		-->
		<throwGrenade weaponSlotName="FragGrenade" cooldown="10"
				requiredUpgrade="AstraMilitarum/FragGrenade">
			<model>
				<action animation="Units/AstraMilitarum/TempestusScionGrenade"
						beginFire="0.833333333333"/>
			</model>
		</throwGrenade>
		<throwGrenade weaponSlotName="KrakGrenade" cooldown="10"
				requiredUpgrade="AstraMilitarum/KrakGrenade">
			<model>
				<action animation="Units/AstraMilitarum/TempestusScionGrenade"
						beginFire="0.833333333333"/>
			</model>				
		</throwGrenade>
		<mediPack cooldown="10" requiredUpgrade="AstraMilitarum/MediPack">
			<model>
				<action bone="ChestBone"
						sound="Actions/Heal"/>
			</model>
			<conditions>
				<unit>
					<damaged/>
				</unit>
			</conditions>
			<beginTargets>
				<selfTarget>
					<areas>
						<area affects="Unit">
							<modifiers>
								<modifier>
									<effects>
										<hitpointsFactorFromMax add="0.5"/>
									</effects>
								</modifier>
							</modifiers>
						</area>
					</areas>
				</selfTarget>
			</beginTargets>
		</mediPack>
		<!-- Shoot Grenade Launcher -->
				<useWeapon cooldown="3"
				consumedActionPoints="1"
				weaponSlotName="KrakGrenadeLauncher"
				icon="Weapons/MaccabianKrakGrenadeLauncher">
			<model>
				<action	animation="Units/AstraMilitarum/TempestusScionAttack"
						beginFire="1.0" endFire="1.5"/>
			</model>
			<sharedCooldowns>
				<action name="UseWeapon/FragGrenadeLauncher"/>
				<action name="UseWeapon/FireGrenadeLauncher"/>
			</sharedCooldowns>
		</useWeapon>
		<useWeapon cooldown="3"
				consumedActionPoints="1"
				weaponSlotName="FragGrenadeLauncher"
				icon="Weapons/MaccabianFragGrenadeLauncher">
			<model>
				<action	animation="Units/AstraMilitarum/TempestusScionAttack"
						beginFire="1.0" endFire="1.5"/>
			</model>
			<sharedCooldowns>
				<action name="UseWeapon/KrakGrenadeLauncher"/>
				<action name="UseWeapon/FireGrenadeLauncher"/>
			</sharedCooldowns>
		</useWeapon>
		<useWeapon cooldown="3"
				consumedActionPoints="1"
				weaponSlotName="FireGrenadeLauncher"
				icon="Weapons/MaccabianFireGrenadeLauncher">
			<model>
				<action	animation="Units/AstraMilitarum/TempestusScionAttack"
						beginFire="1.0" endFire="1.5"/>
			</model>
			<sharedCooldowns>
				<action name="UseWeapon/KrakGrenadeLauncher"/>
				<action name="UseWeapon/FragGrenadeLauncher"/>
			</sharedCooldowns>
		</useWeapon>
		<!-- Prayer -->
		<genericUnitAbility consumedActionPoints="1"
				name="AstraMilitarum/Pray">
			<model>
				<action sound="Actions/VerseOfHolyPiety"/>
			</model>
			<beginTargets>
				<selfTarget>
					<areas>
						<area affects="Unit">
							<modifiers>
								<modifier>
									<effects>
										<addTrait duration="4" name="AstraMilitarum/Prayed"/>
										<addTrait duration="1" name="AstraMilitarum/HolyProtection"/>
										<morale add="3"/> <!-- Not enough to recover after a nuke -->
									</effects>
								</modifier>
								<!-- Summoning Sickness cripples unit before it prays -->
								<modifier>
									<conditions>
										<unit>
											<trait name="AstraMilitarum/MaccabianSummoningSickness"/>
										</unit>
									</conditions>
									<effects>
										<removeTrait name="AstraMilitarum/MaccabianSummoningSickness"/>
									</effects>
								</modifier>
							</modifiers>
						</area>
					</areas>
				</selfTarget>
			</beginTargets>
		</genericUnitAbility>
	</actions>
	<traits>
		<trait name="ExtraInfantryArmour" requiredUpgrade="AstraMilitarum/ExtraInfantryArmour"/>
		<trait name="MoveThroughCover"/>
		<trait name="VoxCaster" requiredUpgrade="AstraMilitarum/VoxCaster"/>

		<trait name="AstraMilitarum/MaccabianJannisary"/>
		<trait name="AstraMilitarum/MaccabianSummoningSickness"/>
	</traits>
	<!-- Too Many Voices compatibility -->
	<responses>
		<!-- Use Grenade Launcher -->
		<action name="UseWeapon/MaccabianFireGrenadeLauncher" sound="Units/AstraMilitarum/TooManyVoices/Infantry/Guardsman_Attack" soundCount="8"/>
		<action name="UseWeapon/MaccabianKrakGrenadeLauncher" sound="Units/AstraMilitarum/TooManyVoices/Infantry/Guardsman_Attack" soundCount="8"/>
		<action name="UseWeapon/MaccabianFragGrenadeLauncher" sound="Units/AstraMilitarum/TooManyVoices/Infantry/Guardsman_Attack" soundCount="8"/>
		<!-- Default -->
		<action name="UseWeapon/FragGrenade" sound="Units/AstraMilitarum/TooManyVoices/Infantry/Guardsman_Attack" soundCount="8"/>
		<action name="UseWeapon/KrakGrenade" sound="Units/AstraMilitarum/TooManyVoices/Infantry/Guardsman_Attack" soundCount="8"/>
		<action name="MediPack" sound="Units/AstraMilitarum/TooManyVoices/Infantry/Guardsman_Ability_Med" soundCount="1"/>
		<attack sound="Units/AstraMilitarum/TooManyVoices/Infantry/Guardsman_Attack" soundCount="8"/>
		<move sound="Units/AstraMilitarum/TooManyVoices/Infantry/Guardsman_Move" soundCount="8"/>
		<select sound="Units/AstraMilitarum/TooManyVoices/Infantry/Guardsman_Select" soundCount="4"/>
		<productionCompleted sound="Units/AstraMilitarum/TooManyVoices/Infantry/Guardsman_Complete" soundCount="1"/>
	</responses>
</unit>
