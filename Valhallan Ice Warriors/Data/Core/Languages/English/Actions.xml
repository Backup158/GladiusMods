    <!-- Barrier Squad Aura -->
    <entry name="AstraMilitarum/BarrierSquadAura" value="Barrier Squad's Watch"/>
    <entry name="AstraMilitarum/BarrierSquadAuraDescription" value="Improves morale for allied infantry within 3 tiles."/>
    <entry name="AstraMilitarum/BarrierSquadAuraFlavor" value="&quot;Run? Frak that! It'll either be their guns or ours, and I'll be damned if I forfeit my familial compensation!&quot; - Unnamed Valhallan Guardsman"/>
