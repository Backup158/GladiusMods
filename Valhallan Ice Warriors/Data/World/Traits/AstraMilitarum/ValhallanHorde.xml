<?xml version="1.0" encoding="utf-8"?>
<trait category="Buff" alwaysVisible="1" icon="Attributes/PopulationLimit">
	<modifiers>
		<!-- Movement when near Cities, leaders, or THE HORDE -->
		<modifier>
			<conditions>
                <unit match="Any">
                    <unitsInRange count="1" range="5">
						<allied/>
						<trait name="Headquarters"/>
                    </unitsInRange>
					<unitsInRange count="1" range="2">
						<allied/>
						<trait name="Hero"/>
                    </unitsInRange>
					<unitsInRange count="4" range="3">
						<allied/>
						<trait name="AstraMilitarum/Valhallan"/>
                    </unitsInRange>
                </unit>
            </conditions>
			<effects>
				<movementMax add="1"/>
				<movement add="1"/>
			</effects>
		</modifier>
		<!-- Accuracy -->
		<!--    Debuffed by default. Bonus when 2 allies -->
		<modifier>
			<effects>
				<rangedAccuracy mul="-0.17"/>
			</effects>
		</modifier>
		<!-- 	Offset when near allies -->
		<modifier visible="0">
			<conditions>
                <unit>
                    <unitsInRange count="1" range="1">
						<allied/>
						<!-- <trait name="AstraMilitarum/Valhallan"/> -->
                    </unitsInRange>
                </unit>
            </conditions>
			<effects>
				<rangedAccuracy mul="0.17"/>
			</effects>
		</modifier>
		<modifier visible="0">
			<conditions>
                <unit>
                    <unitsInRange count="2" range="1">
						<allied/>
						<!-- <trait name="AstraMilitarum/Valhallan"/> -->
                    </unitsInRange>
                </unit>
            </conditions>
			<effects>
				<rangedAccuracy mul="0.17"/> 
				<moraleLossFactor add="-0.16"/> <!-- 17 + 16 = 33 -->
			</effects>
		</modifier>
	</modifiers>
</trait>
