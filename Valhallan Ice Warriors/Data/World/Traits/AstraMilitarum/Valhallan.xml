<?xml version="1.0" encoding="utf-8"?>
<trait category="Buff" alwaysVisible="1" icon="Units/AstraMilitarum/ValhallanGuardsman">
	<modifiers>
		<!-- Improved morale -->
		<modifier>
			<effects>
				<moraleLossFactor add="-0.17"/> <!-- Space Marines are -33% -->
			</effects>
		</modifier>
		<!-- Ice Warriors -->
		<modifier>
			<conditions>
				<tile match="Any">
					<feature name="Arctic"/>
					<feature name="Tundra"/>
				</tile>
			</conditions>
			<effects>
				<invulnerableDamageReduction min="0.17"/>
			</effects>
		</modifier>
		<!-- Urban Warfare -->
		<!-- 	so I don't have to check every feature name for city (and this is better for compatibility)-->
		<modifier>
			<conditions>
				<unit match="Any">
					<trait name="City"/>
					<trait name="ImperialRuin"/>
					<trait name="Outpost"/>
				</unit>
			</conditions>
			<effects>
				<armor add="1"/>
			</effects>
		</modifier>
		<!-- Ork Nemesis -->
		<modifier visible="0">
			<conditions>
				<encounter>
					<self>
						<attacking/>
					</self>
					<opponent>
						<noAttacking/>
						<!-- <faction name="Orks"/> -->
						<trait name="Orks/GreenTideHealing"/>
					</opponent>
				</encounter>
			</conditions>
			<effects>
				<accuracy mul="0.17"/>
			</effects>
		</modifier>
	</modifiers>
</trait>
