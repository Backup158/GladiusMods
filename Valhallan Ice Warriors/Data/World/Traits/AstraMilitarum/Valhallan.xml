<?xml version="1.0" encoding="utf-8"?>
<trait category="Buff" alwaysVisible="1" icon="Units/AstraMilitarum/ValhallanGuardsman">
	<modifiers>
		<!-- Improved morale -->
		<modifier>
			<effects>
				<moraleLossFactor add="-0.17"/> <!-- Space Marines are -33% -->
			</effects>
		</modifier>
		<!-- Ice Warriors -->
		<modifier>
			<conditions>
				<tile match="Any">
					<feature name="Arctic"/>
					<feature name="Tundra"/>
				</tile>
			</conditions>
			<effects>
				<feelNoPainDamageReduction add="0.17"/>
			</effects>
		</modifier>
		<!-- Urban Warfare -->
		<!-- 	so I don't have to check every feature name for city (and this is better for compatibility)-->
		<modifier>
			<conditions>
				<unit match="Any">
					<trait name="City"/>
					<trait name="ImperialRuin"/>
					<trait name="Outpost"/>
				</unit>
			</conditions>
			<effects>
				<armor add="1"/>
			</effects>
		</modifier>
		<!-- Movement when near Cities -->
		<modifier>
			<conditions>
                <unit>
                    <unitsInRange count="1" range="5">
						<allied/>
						<trait name="Headquarters"/>
                    </unitsInRange>
                </unit>
            </conditions>
			<effects>
				<movementMax add="1"/>
				<movement add="1"/>
			</effects>
		</modifier>
		<!-- Accuracy -->
		<!--    Debuffed by default -->
		<modifier>
			<effects>
				<rangedAccuracy mul="-0.33"/>
			</effects>
		</modifier>
		<!-- 	Offset when near allies -->
		<modifier visible="0">
			<conditions>
                <unit>
                    <unitsInRange count="1" range="1">
						<allied/>
						<!-- <trait name="AstraMilitarum/Valhallan"/> -->
                    </unitsInRange>
                </unit>
            </conditions>
			<effects>
				<rangedAccuracy mul="0.17"/>
			</effects>
		</modifier>
		<modifier visible="0">
			<conditions>
                <unit>
                    <unitsInRange count="2" range="1">
						<allied/>
						<!-- <trait name="AstraMilitarum/Valhallan"/> -->
                    </unitsInRange>
                </unit>
            </conditions>
			<effects>
				<rangedAccuracy mul="0.16"/> <!-- 17 + 16 = 33 -->
				<moraleLossFactor add="-0.16"/>
			</effects>
		</modifier>
		<!-- Ork Nemesis -->
		<modifier visible="0">
			<conditions>
				<encounter>
					<self>
						<attacking/>
					</self>
					<opponent>
						<noAttacking/>
						<!-- <faction name="Orks"/> -->
						<trait name="Orks/GreenTideHealing"/>
					</opponent>
				</encounter>
			</conditions>
			<effects>
				<accuracy mul="0.17"/>
			</effects>
		</modifier>
	</modifiers>
</trait>
