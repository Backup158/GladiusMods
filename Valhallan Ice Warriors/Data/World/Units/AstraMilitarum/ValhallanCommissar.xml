								</modifier>
							</modifiers>
						</area>
					</areas>
				</target>
				<selfTarget>
					<areas>
						<area affects="Unit" radius="3">
							<modifiers>
								<modifier>
									<conditions>
										<unit>
											<allied/>
										</unit>
									</conditions>
									<effects>
										<morale add="3"/>
									</effects>
								</modifier>
							</modifiers>
						</area>
					</areas>
				</selfTarget>
			</beginTargets>			
		</summaryExecution>
		<!-- Deploy Barrier Squad -->
		<!-- Unlocked by default-->
		<genericUnitAbility cooldown="10"
				requiredActionPoints="0"
				consumedActionPoints="0"
				consumedMovement="0"
				name="AstraMilitarum/DeployBarrierSquad"
				icon="Units/AstraMilitarum/ValhallanBarrierSquad"
				shoutString="Actions/AstraMilitarum/NotOneStepBack">
			<beginTargets>
				<target rangeMax="1">
					<conditions>
						<tile>
							<noUnit/>
							<land/>
							<noFeature name="GravityWaves"/>
						</tile>
					</conditions>
					<areas>
						<area affects="Tile">
							<modifiers>
								<modifier>
									<effects>
										<addUnit name="AstraMilitarum/ValhallanBarrierSquad"/>
									</effects>
								</modifier>
							</modifiers>
						</area>
					</areas>
				</target>
			</beginTargets>
		</genericUnitAbility>
		<!-- URAAAAAAAAAA -->
		<genericUnitAbility	cooldown="10"
				requiredActionPoints="1"
				consumedActionPoints="0" consumedMovement="0"
				name="AstraMilitarum/Ura"
				shoutString="Actions/AstraMilitarum/Ura">
			<model>
				<action sound="Actions/ValhallanUra" soundCount="6"/>
			</model>
			<beginTargets>
				<selfTarget>
					<conditions>
						<unit>
							<noTrait name="AstraMilitarum/UraCooldown"/>
							<!-- 4 Infantry allies, at least 2 of whom are Valhallans -->
							<unitsInRange count="2" range="3">
								<allied/>
								<trait name="AstraMilitarum/Valhallan"/>
							</unitsInRange>
							<unitsInRange count="4" range="3">
								<allied/>
								<noTrait name="Vehicle"/>
								<noTrait name="Fortification"/>
							</unitsInRange>
						</unit>
					</conditions>
					<areas>
						<area affects="Unit" radius="3">
							<modifiers>
								<modifier>
									<conditions>
										<unit>
											<allied/>
											<trait name="AstraMilitarum/Valhallan"/>
											<noTrait name="AstraMilitarum/Ura"/>
											<noTrait name="AstraMilitarum/UraCooldown"/>
										</unit>
									</conditions>
									<effects>
										<addTrait duration="2" name="AstraMilitarum/Ura"/>
										<addTrait duration="10" name="AstraMilitarum/UraCooldown"/>
									</effects>
								</modifier>
							</modifiers>
						</area>
					</areas>
				</selfTarget>
			</beginTargets>
