<?xml version="1.0" encoding="utf-8"?>
<unit>
	<model>
		<unit mesh="Units/AstraMilitarum/Guardsman"
				material="Units/AstraMilitarum/SteelLegionnaire"
				idleAnimation="Units/AstraMilitarum/GuardsmanIdle"
				idleAnimationCount="3"
				idleContinuously="1"
				normalWeight="0.1"
				scale="1 1 1"
				bloodBone="ChestBone"
				walker="1"/>
	</model>
	<!-- Smaller group from 8 -->
	<group size="6" rowSize="3" memberDeltaX="70" memberDeltaY="50"/>
	<weapons>
		<weapon name="Flamer">
			<model>
				<projectileWeapon mesh="Weapons/AstraMilitarum/GuardsmanLasgun"
						material="Weapons/AstraMilitarum/GuardsmanLasgun"
						bone="RightHandBone"
						muzzleBone="GuardsmanLasgunMuzzle0"
						fireInterval="10"
						effectScale="0.75"/>
			</model>
		</weapon>
		<weapon name="FragGrenade" slotName="FragGrenade" enabled="0">
			<model>
				<grenadeWeapon muzzleBone="LeftHandBone"/>
			</model>
		</weapon>
		<weapon name="KrakGrenade" slotName="KrakGrenade" enabled="0">
			<model>
				<grenadeWeapon muzzleBone="LeftHandBone"/>
			</model>
		</weapon>
	</weapons>
	<modifiers>
		<modifier visible="0">
			<effects>
				<armor base="4"/> <!-- %armor base armor=5+ -->
				<foodUpkeep base="1.0"/> <!-- %foodUpkeep base tier=4 factor=1 -->
				<foodCost base="10.0"/> <!-- %foodCost base tier=4 factor=0.5 -->
				<hitpointsMax base="2.0"/> <!-- %hitpointsMax base toughness=3 wounds=1 -->
				<meleeAccuracy base="6"/> <!-- %meleeAccuracy base weaponSkill=3 -->
				<meleeAttacks base="1"/>
				<!-- <meleeInitiative base="3"/> -->
				<oreCost base="10.0"/> <!-- %oreCost base tier=4 factor=0.5 -->
				<strengthDamage base="1"/> <!-- %strengthDamage base strength=3 -->
				<moraleMax base="6"/> <!-- %moraleMax base leadership=6 -->
				<movementMax base="3"/>
				<productionCost base="24.0"/> <!-- %productionCost base tier=4 factor=1 -->
				<rangedAccuracy base="6"/> <!-- %rangedAccuracy base ballisticSkill=3 -->
			</effects>
		</modifier>
	</modifiers>
	<strategyModifiers>
		<modifier>
			<effects>
				<increaseInfantryScore base="1.0"/>
			</effects>
		</modifier>
	</strategyModifiers>
	<actions>
		<attack>
			<model>
				<action animation="Units/AstraMilitarum/GuardsmanAttack"
						beginFire="0.35" endFire="2.5"/>
			</model>
		</attack>
		<die>
			<model>
				<action animation="Units/AstraMilitarum/GuardsmanDie"
						animationCount="3"
						sound="Units/MediumUnarmoredDie"
						soundCount="4"
						soundDelay="0.4"
						voiceSound="Units/AstraMilitarum/InfantryDie"
						voiceSoundCount="5"/>
			</model>		
		</die>
		<idle>
			<model>
				<action/>
			</model>
		</idle>
		<move>
			<model>
				<action animation="Units/AstraMilitarum/GuardsmanMove"
						sound="Units/AstraMilitarum/InfantryMove"
						soundCount="4"/>
			</model>
		</move>
		<throwGrenade weaponSlotName="FragGrenade" cooldown="10"
				requiredUpgrade="AstraMilitarum/FragGrenade">
			<model>
				<action animation="Units/AstraMilitarum/GuardsmanGrenade"
						beginFire="0.833333333333"/>
			</model>
		</throwGrenade>
		<throwGrenade weaponSlotName="KrakGrenade" cooldown="10"
				requiredUpgrade="AstraMilitarum/KrakGrenade">
			<model>
				<action animation="Units/AstraMilitarum/GuardsmanGrenade"
						beginFire="0.833333333333"/>
			</model>				
		</throwGrenade>
		<mediPack cooldown="10" requiredUpgrade="AstraMilitarum/MediPack">
			<model>
				<action bone="ChestBone"
						sound="Actions/Heal"/>
			</model>
			<conditions>
				<unit>
					<damaged/>
				</unit>
			</conditions>
			<beginTargets>
				<selfTarget>
					<areas>
						<area affects="Unit">
							<modifiers>
								<modifier>
									<effects>
										<hitpointsFactorFromMax add="0.5"/>
									</effects>
								</modifier>
							</modifiers>
						</area>
					</areas>
				</selfTarget>
			</beginTargets>
		</mediPack>
		<!-- Purging Flame to remove Fungus -->
		<genericUnitAbility cooldown="1"
							consumedActionPoints="0"
							consumedMovement="0"
							name="AstraMilitarum/PurgingFlames"
							icon="Traits/Flame">
			<model>
				<!-- HOW DO I GET THE FLAMES TO PLAY -->
				<!-- the useweapon type of actions are locked to require an enemy -->
				<action animation="Units/AstraMilitarum/GuardsmanAttack"
						beginFire="0.35" endFire="2.5"
						sound="Weapons/Flamer" soundCount="3"/>
			</model>
			<beginTargets>
				<target rangeMax="1">
					<conditions>
						<!-- Basic things to match all -->
						<tile>
							<land/>
							<noEnemyCity/>
							<noEnemyPlayer/>
							<noEnemyUnit/>
						</tile>
						<!-- forest/fungus only -->
						<tile match="Any">
							<feature name="OrkoidFungus"/>
							<feature name="Forest"/>
						</tile>
					</conditions>
					<areas>
						<area affects="Tile">
							<modifiers>
								<modifier>
									<effects>
										<removeFeature name="OrkoidFungus"/>
										<removeFeature name="Forest"/>
									</effects>
								</modifier>
							</modifiers>
						</area>
					</areas>
				</target>
			</beginTargets>
		</genericUnitAbility>
	</actions>
	<traits>
		<trait name="ExtraInfantryArmour" requiredUpgrade="AstraMilitarum/ExtraInfantryArmour"/>
		<trait name="VoxCaster" requiredUpgrade="AstraMilitarum/VoxCaster"/>
		<trait name="AstraMilitarum/SteelLegion"/>
		<trait name="AstraMilitarum/ArmageddonDeployment"/>
		<trait name="AstraMilitarum/ArmageddonDeploymentHealingRate" requiredUpgrade="AstraMilitarum/MediPack"/>
	</traits>
	<!-- Too Many Voices compatibility -->
	<responses>
		<action name="UseWeapon/FragGrenade" sound="Units/AstraMilitarum/TooManyVoices/Infantry/Guardsman_Attack" soundCount="8"/>
		<action name="UseWeapon/KrakGrenade" sound="Units/AstraMilitarum/TooManyVoices/Infantry/Guardsman_Attack" soundCount="8"/>
		<action name="MediPack" sound="Units/AstraMilitarum/TooManyVoices/Infantry/Guardsman_Ability_Med" soundCount="1"/>
		<action name="AstraMilitarum/PurgingFlames" sound="Units/AstraMilitarum/TooManyVoices/Infantry/Guardsman_Attack" soundCount="8"/>
		<attack sound="Units/AstraMilitarum/TooManyVoices/Infantry/Guardsman_Attack" soundCount="8"/>
		<move sound="Units/AstraMilitarum/TooManyVoices/Infantry/Guardsman_Move" soundCount="8"/>
		<select sound="Units/AstraMilitarum/TooManyVoices/Infantry/Guardsman_Select" soundCount="4"/>
		<productionCompleted sound="Units/AstraMilitarum/TooManyVoices/Infantry/Guardsman_Complete" soundCount="1"/>
	</responses>
</unit>
