<?xml version="1.0" encoding="utf-8"?>
<unit dlc="Supplement6">
	<model>
		<unit mesh="Units/AstraMilitarum/Chimera"
				material="Units/AstraMilitarum/Chimera"
				idleAnimation="Units/AstraMilitarum/ChimeraIdle"
				idleAnimationCount="3"
				idleContinuously="1"
				scale="1.5 1.5 1.5"
				explosionsBone="Bone"
				uvAnimated="1"/>
	</model> <!-- from 1.3 scale -->
	<weapons>
		<weapon name="LaserDemolisher">
			<model>
				<beamWeapon muzzleBone=".MultiLaserMuzzle" fireInterval="1.0"/>
			</model>
		</weapon>
		<weapon name="HeavyBolter">
			<model>
				<projectileWeapon muzzleBone=".HeavyBolterMuzzle"/>
			</model>
		</weapon>
		<weapon name="HeavyBolter" requiredUpgrade="AstraMilitarum/AdditionalHeavyBolters">
			<model>
				<projectileWeapon muzzleBone=".HeavyBolterMuzzle"/>
			</model>
		</weapon>
		<weapon name="LasgunArray" count="1">
			<model>
				<beamWeapon muzzleBone=".LasgunArrayMuzzle" muzzleCount="6"
						effectFaceWeight="0"
						cycleMuzzles="0"/>
			</model>
		</weapon>
		<weapon name="HunterKillerMissile" slotName="HunterKillerMissile"
				enabled="0">
			<model>
				<missileWeapon muzzleBone="Bone"/>
			</model>	
		</weapon>		
	</weapons>
	<modifiers>
		<modifier visible="0">
			<effects>
				<armor base="8"/> <!-- %armor base armor=12/10/10 -->
				<cargoSlots base="1"/> <!-- 4. Keeping a bit since it's still a Chimera | %cargoSlots base capacity=12 --> 
				<hitpointsMax base="34.0"/> <!-- 24 | %hitpointsMax base armor=12/10/10 wounds=3 -->
				<moraleMax base="8"/> <!-- %moraleMax base leadership=7 -->
				<movementMax base="3"/> <!-- 4 -->
				<oreUpkeep base="3.0"/> <!-- %oreUpkeep base tier=6 factor=1 -->
				<oreCost base="65.0"/> <!-- 40 | %oreCost base tier=6 factor=1 -->
				<productionCost base="42.0"/> <!-- 36 | %productionCost base tier=6 factor=1 -->
				<rangedAccuracy base="6"/> <!-- %rangedAccuracy base ballisticSkill=3 -->
			</effects>
		</modifier>
	</modifiers>
	<strategyModifiers>
		<modifier>
			<effects>
				<increaseVehiclesScore base="1.0"/>
			</effects>
		</modifier>
	</strategyModifiers>
	<actions>
		<attack>
			<model>
				<action animation="Units/AstraMilitarum/ChimeraAttack"
						beginFire="0.77"
						endFire="2.6"/>
			</model>				
		</attack>
		<die>
			<model>
				<action animation="Units/AstraMilitarum/ChimeraDie0"
						sound="Units/MediumVehicleDie"
						soundCount="3"
						soundDelay="0.2"/>
			</model>
		</die>
		<move>
			<model>
				<action animation="Units/AstraMilitarum/ChimeraMove"
						sound="Units/AstraMilitarum/TankMove"
						soundCount="3"/>
			</model>
		</move>
		<createSmokeScreen cooldown="10"
				icon="Traits/SmokeScreen"
				requiredUpgrade="AstraMilitarum/SmokeLauncher">
			<model>
				<action sound="Actions/SmokeScreen"/>
			</model>
			<beginTargets>
				<selfTarget>
					<areas>
						<area affects="Tile">
							<modifiers>
								<modifier>
									<effects>
										<addFeature duration="3" name="SmokeScreen"/>
									</effects>
								</modifier>
							</modifiers>
						</area>
					</areas>
				</selfTarget>
			</beginTargets>
		</createSmokeScreen>
		<useWeapon weaponSlotName="HunterKillerMissile"
				cooldown="10"
				requiredUpgrade="AstraMilitarum/HunterKillerMissile">
			<model>
				<action beginFire="0.1" endFire="1.0"/>
			</model>
		</useWeapon>		
	</actions>
	<traits>
		<trait name="CamoNetting" requiredUpgrade="AstraMilitarum/CamoNetting"/>
		<trait name="DozerBlade" requiredUpgrade="AstraMilitarum/DozerBlade"/>
		<trait name="ExtraVehicleArmour" requiredUpgrade="AstraMilitarum/ExtraVehicleArmour"/>
		<trait name="RecoveryGear" requiredUpgrade="AstraMilitarum/RecoveryGear"/>
		<trait name="RelicPlating" requiredUpgrade="AstraMilitarum/RelicPlating"/>
		<trait name="Tank"/>
		<trait name="Vehicle"/>
		<trait name="Transport"/>
		<!-- What makes it better -->
		<trait name="AstraMilitarum/ArmageddonOrks"/>
	</traits>
	<!-- Too Many Voices compatibility -->
	<responses>
		<action name="CreateSmokeScreen" sound="Units/AstraMilitarum/TooManyVoices/Vehicles/Chimera_Ability_Smoke" soundCount="2"/>
		<action name="HunterKillerMissile" sound="Units/AstraMilitarum/TooManyVoices/Vehicles/Chimera_Ability_HunterKiller" soundCount="2"/>
		<attack sound="Units/AstraMilitarum/TooManyVoices/Vehicles/Chimera_Attack" soundCount="8"/>
		<move sound="Units/AstraMilitarum/TooManyVoices/Vehicles/Chimera_Move" soundCount="8"/>
		<select sound="Units/AstraMilitarum/TooManyVoices/Vehicles/Chimera_Select" soundCount="4"/>
		<productionCompleted sound="Units/AstraMilitarum/TooManyVoices/Vehicles/Chimera_Complete" soundCount="1"/>
  	</responses>
</unit>
