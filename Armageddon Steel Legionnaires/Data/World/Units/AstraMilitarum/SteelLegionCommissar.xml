		<!-- Boost Infantry and Vehicles -->
		<auraOfDiscipline passive="1" 
				rank="-1" 
				rankMax="2" 
				levelUpPriority="0.1"
				icon="Actions/AuraOfDiscipline">
			<beginTargets>
				<selfTarget>
					<areas>
						<area affects="Tile" radius="1">
							<modifiers>
								<modifier>
									<effects>
										<addTrait name="AstraMilitarum/SteelLegionDiscipline"/>
									</effects>
								</modifier>
							</modifiers>
						</area>
					</areas>
				</selfTarget>
			</beginTargets>
		</auraOfDiscipline>
		<!-- Armoured Fist -->
		<!-- Boost Vehicles -->
		<auraOfDiscipline passive="1" 
				rank="-1" 
				rankMax="2" 
				levelUpPriority="0.1"
				name="AstraMilitarum/ArmoredFist"
				icon="Traits/SistersOfBattle/AvengingZeal">
			<beginTargets>
				<selfTarget>
					<areas>
						<area affects="Tile" radius="1">
							<modifiers>
								<modifier>
									<effects>
										<addTrait name="AstraMilitarum/ArmoredFist"/>
									</effects>
								</modifier>
							</modifiers>
						</area>
					</areas>
				</selfTarget>
			</beginTargets>
		</auraOfDiscipline>
		<!-- Aura of Command -->
		<!-- Morale for allies and self buff -->
		<auraOfDiscipline passive="1" 
				rank="-1" 
				rankMax="2" 
				levelUpPriority="0.1"
				name="AstraMilitarum/AuraOfCommand"
				icon="Units/AstraMilitarum/LordCommissar">
			<beginTargets>
				<selfTarget>
					<areas>
						<!-- Morale of allies -->
						<area affects="Tile" radius="2">
							<modifiers>
								<modifier>
									<effects>
										<addTrait name="AstraMilitarum/AuraOfCommand"/>
									</effects>
								</modifier>
							</modifiers>
						</area>
						<!-- RDR for self, including vehicle it's in -->
						<area affects="Tile" radius="0">
							<modifiers>
								<modifier>
									<effects>
										<addTrait name="AstraMilitarum/CommandArmor"/>
									</effects>
								</modifier>
							</modifiers>
						</area>
					</areas>
				</selfTarget>
			</beginTargets>
		</auraOfDiscipline>
