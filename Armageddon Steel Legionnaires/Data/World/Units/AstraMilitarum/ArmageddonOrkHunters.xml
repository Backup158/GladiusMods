		<!-- Traps -->
		<genericUnitAbility cooldown="5"
				consumedMovement="0"
				icon="Actions/ChaosSpaceMarines/ShatterDefences"
				name="AstraMilitarum/OrkHuntersTrap">
			<model>
				<action sound="Weapons/Choppa" soundCount="3"/>
			</model>
			<beginTargets>
				<target rangeMax="1">
					<conditions>
						<tile>
							<land/>
							<noEnemyUnit/>
						</tile>
					</conditions>
					<areas>
						<area affects="Tile">
							<modifiers>
								<modifier>
									<effects>
										<addFeature name="OrkHuntersTrap"/>
									</effects>
								</modifier>
							</modifiers>
						</area>
					</areas>
				</target>
			</beginTargets>
		</genericUnitAbility>
	</actions>
	<traits>
		<trait name="AstraMilitarum/ArmageddonOrkHunters"/>
		<!-- Steel Legion Traits -->
		<trait name="ExtraInfantryArmour" requiredUpgrade="AstraMilitarum/ExtraInfantryArmour"/>
		<trait name="VoxCaster" requiredUpgrade="AstraMilitarum/VoxCaster"/>
		<trait name="AstraMilitarum/SteelLegion"/>
		<trait name="AstraMilitarum/ArmageddonDeployment"/>
		<trait name="AstraMilitarum/ArmageddonDeploymentHealingRate" requiredUpgrade="AstraMilitarum/MediPack"/>
		<!-- Kommando Traits -->
		<trait name="Orks/CreateOrkoidFungusOnDeath"/>
		<trait name="Orks/GreenTideHealing"/>
		<trait name="Infiltrate"/>
		<trait name="MobRule"/>
