<?xml version="1.0" encoding="utf-8"?>
<unit spawnDistanceMin="6">
	<model>
		<unit mesh="Units/ChaosSpaceMarines/ChaosCultist"
				material="Units/ChaosSpaceMarines/ChaosCultist"
				idleAnimation="Units/ChaosSpaceMarines/ChaosCultistIdle"
				idleAnimationCount="3"
				idleContinuously="1"
				normalWeight="0.1"
				scale="1.0 1.0 1.0"
				bloodBone="Bone001"
				walker="1"/>
	</model> <!-- Taller than the normal cultists -->
	<!-- smaller group (from 10) -->
	<group size="8" rowSize="4" memberDeltaX="70" memberDeltaY="50"/>
	<weapons>
		<!-- Autopistol to Slugga -->
		<!-- I tried snazzgun since it's a t3 unit, but that's just broken lmao -->
		<!-- traits will make up for it -->
		<weapon name="Slugga">
 			<model>
				<!--
				<projectileWeapon mesh="Weapons/ChaosSpaceMarines/Autopistol"
						material="Units/ChaosSpaceMarines/ChaosCultist"
						bone="Bone006"
						muzzleBone=".Muzzle"
						fireInterval="0.25"/>
				-->
				<projectileWeapon mesh="Weapons/Orks/Slugga"
						material="Weapons/Orks/ChoppaSlugga"
						muzzleBone=".Muzzle" 
						bone="Bone006" 
						fireInterval="0.5"/>
			</model>
		</weapon>
		<!-- Close Combat Weapon to Chainsword -->
		<weapon name="Chainsword">
 			<model>
				<weapon mesh="Weapons/SpaceMarines/Chainsword" 
						material="Weapons/SpaceMarines/Chainsword" 
						fireInterval="0.5"/>
			</model>
		</weapon>
		<!-- Grenades -->
		<!-- bone is from the body, where the grenades spawn from -->
		<!-- Instead of frags they use Stikkbombs -->
		<weapon name="Stikkbomb" slotName="FragGrenade" enabled="0">
			<model>
				<grenadeWeapon muzzleBone="Bone006"/>
			</model>
		</weapon>
		<weapon name="KrakGrenade" slotName="KrakGrenade" enabled="0">
			<model>
				<grenadeWeapon muzzleBone="Bone006"/>
			</model>
		</weapon>
		<weapon name="MeltaBomb" slotName="MeltaBomb" enabled="0">
			<model>
				<grenadeWeapon muzzleBone="Bone006"/>
			</model>
		</weapon>
	</weapons>
	<modifiers>
		<modifier visible="0">
			<effects>
				<armor base="2"/> <!-- Guardsman is 4, Kommando is 2 | %armor base armor=6+ -->
				<hitpointsMax base="2.5"/> <!-- Guardsman is 2, Kommando is 3 | %hitpointsMax base toughness=3 wounds=1 -->
				<meleeAccuracy base="8"/> <!-- Guardsman is 6, Kommando is 8 | %meleeAccuracy base weaponSkill=3 -->
				<meleeAttacks base="1"/>
				<strengthDamage base="1"/> <!-- %strengthDamage base strength=3 -->
				<!-- <meleeInitiative base="3"/> -->
				<moraleMax base="6"/> <!-- Guardsman and Scions are 6 %moraleMax base leadership=5 -->
				<movementMax base="3"/> <!-- Guardsman and Kommando is 3 -->
				<productionCost base="30.0"/> <!-- Guardsman is 24, Scions are 36 | %productionCost base tier=4 factor=1 -->
				<rangedAccuracy base="6"/> <!-- %rangedAccuracy base ballisticSkill=3 -->
				<foodUpkeep base="1.0"/> <!-- %foodUpkeep base tier=4 factor=1 -->
				<foodCost base="15.0"/> <!-- Guardsman is 10 | %foodCost base tier=4 factor=0.5 -->
				<oreCost base="15.0"/> <!-- Guardsman is 10 | %oreCost base tier=4 factor=0.5 -->
			</effects>
		</modifier>
	</modifiers>
	<strategyModifiers>
		<modifier>
			<effects>
				<increaseColonizersScore base="1.0"/>
				<increaseInfantryScore base="1.0"/>
			</effects>
		</modifier>
	</strategyModifiers>
	<actions>
		<attack>
			<model>
				<action animation="Units/ChaosSpaceMarines/ChaosCultistAttack"
						beginFire="0.7"
						endFire="1.8"
						chargeAnimation="Units/ChaosSpaceMarines/ChaosCultistCharge"
						chargeBeginFire="0.7"
						chargeEndFire="1.2"
						meleeAnimation="Units/ChaosSpaceMarines/ChaosCultistMelee"
						meleeBeginSwing="0.2"
						meleeEndSwing="0.9"/>
			</model>
		</attack>
		<die>
			<model>
				<action animation="Units/ChaosSpaceMarines/ChaosCultistDie"
						animationCount="2"
						sound="Units/MediumUnarmoredDie"
						soundCount="4"
						soundDelay="0.35"
						voiceSound="Units/AstraMilitarum/InfantryDie"
						voiceSoundCount="5"/>
			</model>
		</die>
		<idle>
			<model>
				<action/>
			</model>
		</idle>
		<move>
			<model>
				<action animation="Units/ChaosSpaceMarines/ChaosCultistMove"
						sound="Units/AstraMilitarum/InfantryMove"
						soundCount="4"/>
			</model>
		</move>
		<!-- Grenades -->
		<throwGrenade weaponSlotName="FragGrenade" cooldown="10"
				requiredUpgrade="AstraMilitarum/FragGrenade">
			<model>
				<action animation="Units/ChaosSpaceMarines/ChaosCultistAttack"
						beginFire="0.833333333333"/>
			</model>
		</throwGrenade>
		<throwGrenade weaponSlotName="KrakGrenade" cooldown="10"
				requiredUpgrade="AstraMilitarum/KrakGrenade">
			<model>
				<action animation="Units/ChaosSpaceMarines/ChaosCultistAttack"
						beginFire="0.833333333333"/>
			</model>				
		</throwGrenade>
		<throwGrenade weaponSlotName="MeltaBomb" cooldown="10"
				requiredUpgrade="AstraMilitarum/BlastDamage"> <!-- Improved Frag Casing T6 -->
			<model>
				<action animation="Units/ChaosSpaceMarines/ChaosCultistAttack"
						beginFire="0.833333333333"/>
			</model>				
		</throwGrenade>
