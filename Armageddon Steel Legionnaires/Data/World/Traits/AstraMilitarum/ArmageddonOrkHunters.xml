<?xml version="1.0" encoding="utf-8"?>
<trait alwaysVisible="1" category="Buff" icon="Traits/Animosity">
	<modifiers>
		<!-- Damage against Orks -->
		<modifier>
			<conditions>
				<encounter>
					<opponent>
						<faction name="Orks"/>
					</opponent>
				</encounter>
			</conditions>
			<effects>
				<damage mul="0.25"/>
			</effects>
		</modifier>
		<!-- Lose Morale and Health if not attacked -->
		<modifier>
			<conditions>
				<unit>
					<notAttackedThisTurn/>
					<unitsInRange count="0" range="2">
						<enemy/>
						<faction name="Orks"/>
					</unitsInRange>
				</unit>
			</conditions>
			<effects>
				<morale add="-1"/>
				<health add="-1"/>
			</effects>
		</modifier>
		<!-- Lose more Morale if not near Orks -->
		<modifier>
			<conditions>
				<unit>
					<unitsInRange count="0" range="2">
						<enemy/>
						<faction name="Orks"/>
					</unitsInRange>
				</unit>
			</conditions>
			<effects>
				<morale add="-1"/>
			</effects>
		</modifier>
		<!-- Copy for custom faction -->
	</modifiers>
</trait>
