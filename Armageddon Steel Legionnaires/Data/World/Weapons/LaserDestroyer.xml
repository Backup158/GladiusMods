<?xml version="1.0" encoding="utf-8"?>
<weapon icon="Weapons/HeavyLaserDestroyer"> <!-- reusing because im lazy and this is the same thing but not heavy-->
	<!-- Like an ancient, insane lascannon -->
	<model>
		<beamWeapon fireInterval="1.0" 
					fireSound="Weapons/Lascannon" 
					fireSoundCount="6"/>
	</model>
	<modifiers>
		<modifier>
			<effects>
				<attacks add="1"/>
				<rangedArmorPenetration add="6"/>
				<!-- %rangedArmorPenetration add armorPiercing=2 -->
				<rangedDamage add="10"/> <!-- 8 dmg -->
				<!-- %rangedDamage add strength=9 -->
				<strengthDamage base="0"/>
			</effects>
		</modifier>
	</modifiers>
	<target rangeMax="3"/>
	<traits>
		<trait name="HeavyWeapon"/>
		<trait name="AstraMilitarum/LasDamage" requiredUpgrade="AstraMilitarum/LasDamage"/>
		<trait name="ChaosSpaceMarines/LasDamage" requiredUpgrade="ChaosSpaceMarines/LasDamage"/>
		<trait name="SpaceMarines/LasDamage" requiredUpgrade="SpaceMarines/LasDamage"/>
		<trait name="SistersOfBattle/HeavyWeaponBonus" requiredUpgrade="SistersOfBattle/HeavyWeaponBonus"/>
		<!-- Tank hunter weapon -->
		<trait name="TankHunters"/>
	</traits>
</weapon>
