<?xml version="1.0" encoding="utf-8"?>
<weapon>
	<model>
		<beamWeapon fireSound="Weapons/Lasgun"
		 		fireSoundCount="6"/>
	</model>
	<modifiers>
		<modifier>
			<effects>
				<!-- normal lasgun has 2 range, 1 attack, and rapid fire. put 2x attack to make up for losing both-->
				<attacks add="2"/>
				<rangedArmorPenetration add="0"/> <!-- %rangedArmorPenetration add armorPiercing=- -->
				<rangedDamage add="1"/> <!-- %rangedDamage add strength=3 -->
				<strengthDamage base="0"/>
			</effects>
		</modifier>
	</modifiers>
	<target rangeMax="1"/>
	<traits>
		<trait name="AstraMilitarum/LasDamage" requiredUpgrade="AstraMilitarum/LasDamage"/>
		<trait name="ChaosSpaceMarines/LasDamage" requiredUpgrade="ChaosSpaceMarines/LasDamage"/>
		<trait name="SpaceMarines/LasDamage" requiredUpgrade="SpaceMarines/LasDamage"/>
	</traits>
</weapon>
