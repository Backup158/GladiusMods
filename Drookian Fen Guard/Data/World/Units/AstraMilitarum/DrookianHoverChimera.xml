<?xml version="1.0" encoding="utf-8"?>
<unit dlc="Supplement6">
	<model>		
		<unit mesh="Units/SpaceMarines/LandSpeeder"
				material="Units/SpaceMarines/LandSpeeder"
				idleAnimation="Units/SpaceMarines/LandSpeederIdle"
				idleAnimationCount="2"
				idleContinuously="1"
				position="0 0 16"
				scale="0.69 0.69 0.69" 
				explosionsBone="Hull"
				uvAnimated="0"/>
	</model> <!-- Scale default is 0.8 0.8 0.8 -->
	<!-- <group size="2" rowSize="2" memberDeltaX="80" memberDeltaY="110"/> -->
	<weapons>
		<weapon name="HeavyBolter">
			<model>
				<projectileWeapon muzzleBone=".HeavyBolterMuzzle"/>
			</model>
		</weapon>
		<weapon name="MultiLaser">
			<model>
				<beamWeapon muzzleBone=".HeavyBolterMuzzle" fireInterval="0.2"/>
			</model>
		</weapon>
		<weapon name="LasgunArray" count="2">
			<model>
				<beamWeapon muzzleBone=".HeavyBolterMuzzle" muzzleCount="1"
						effectFaceWeight="0"
						cycleMuzzles="0"/>
			</model>
		</weapon>
		<weapon name="HunterKillerMissile" slotName="HunterKillerMissile"
				enabled="0">
			<!-- Remove the animation if this causes problems -->
			<model>
				<missileWeapon muzzleBone=".HeavyBolterMuzzle"/>
			</model>	
		</weapon>	
		<!--
		<weapon name="MultiMelta" requiredUpgrade="SpaceMarines/LandSpeederMultiMelta">
			<model>
				<beamWeapon mesh="Weapons/SpaceMarines/LandSpeederMultiMelta"
						material="Weapons/SpaceMarines/LandSpeederMultiMelta"
						bone="Hull"
						muzzleBone="Muzzle"/>
			</model>
		</weapon>
		 -->
	</weapons>
	<modifiers>
		<modifier visible="0">
			<effects>
				<armor base="6"/> <!-- Chimera is 7 %armor base armor=10/10/10 -->
				<energyCost base="30.0"/> <!-- %energyCost base tier=7 factor=0.5 -->
				<hitpointsMax base="20.0"/> <!-- Chimera is 24 %hitpointsMax base armor=10/10/10 wounds=2 -->
				<moraleMax base="8"/> <!-- %moraleMax base leadership=7 -->
				<movementMax base="3"/> <!-- Chimera is 4. Offset by the +1 movement when high hp -->
				<oreUpkeep base="2.0"/> <!-- %oreUpkeep base tier=6 factor=1 -->
				<oreCost base="40.0"/> <!-- %oreCost base tier=6 factor=1 -->
				<productionCost base="36.0"/> <!-- Chimera is 36 %productionCost base tier=7 factor=1 -->
				<rangedAccuracy base="5"/> <!-- Chimera is 6 %rangedAccuracy base ballisticSkill=4 -->
			</effects>
		</modifier>
	</modifiers>
	<strategyModifiers>
		<modifier>
			<effects>
				<increaseVehiclesScore base="1.0"/>
			</effects>
		</modifier>
	</strategyModifiers>
	<actions>
		<attack>
			<model>
				<action animation="Units/SpaceMarines/LandSpeederAttack"
						beginFire="0.333"
						endFire="2.667"/>
			</model>				
		</attack>
		<die>
			<model>
				<action animation="Units/SpaceMarines/LandSpeederDie"
						sound="Units/MediumVehicleDie"
						soundCount="3"
						soundDelay="0.1"
						voiceSound="Units/SpaceMarines/InfantryDie"
						voiceSoundCount="5"/>
			</model>		
		</die>
		<move>
			<model>
				<action animation="Units/SpaceMarines/LandSpeederMove"
						sound="Units/SpaceMarines/LandSpeederMove"
						soundCount="3"/>
			</model>		
		</move>
		<createSmokeScreen cooldown="10"
				icon="Traits/SmokeScreen"
				requiredUpgrade="AstraMilitarum/SmokeLauncher">
			<model>
				<action sound="Actions/SmokeScreen"/>
			</model>
			<beginTargets>
				<selfTarget>
					<areas>
						<area affects="Tile">
							<modifiers>
								<modifier>
									<effects>
										<addFeature duration="3" name="SmokeScreen"/>
									</effects>
								</modifier>
							</modifiers>
						</area>
					</areas>
				</selfTarget>
			</beginTargets>
		</createSmokeScreen>
		<useWeapon weaponSlotName="HunterKillerMissile"
				cooldown="10"
				requiredUpgrade="AstraMilitarum/HunterKillerMissile">
			<model>
				<action beginFire="0.1" endFire="1.0"/>
			</model>
		</useWeapon>
	</actions>
	<traits>
		<trait name="AntiGravUpwash"/>
		<trait name="CamoNetting" requiredUpgrade="AstraMilitarum/CamoNetting"/>
		<trait name="ExtraVehicleArmour" requiredUpgrade="AstraMilitarum/ExtraVehicleArmour"/>
		<trait name="RecoveryGear" requiredUpgrade="AstraMilitarum/RecoveryGear"/>
		<trait name="RelicPlating" requiredUpgrade="AstraMilitarum/RelicPlating"/>
		<trait name="Skimmer"/>
		<trait name="Transport"/>
		<!-- I think AssaultVehicle would be too much, given the speed and how early this is available -->
		<trait name="Vehicle"/>
		<!-- No tank tag bc it doesn't make sense to let the commander buff this -->
		<!-- Ironically, Infiltrate would hurt more than it helps (unless dropping storm troopers). It won't be able to soak overwatch, so any troops you drop will face the full wrath. Also, I didn't intend for that to be the use case anyways. -->
		<!-- <trait name="Infiltrate"/> -->
	</traits>
	<!-- Too Many Voices Compatibility -->
	<responses>
		<action name="CreateSmokeScreen" sound="Units/AstraMilitarum/TooManyVoices/Vehicles/Chimera_Ability_Smoke" soundCount="2"/>
		<action name="HunterKillerMissile" sound="Units/AstraMilitarum/TooManyVoices/Vehicles/Chimera_Ability_HunterKiller" soundCount="2"/>
		<attack sound="Units/AstraMilitarum/TooManyVoices/Vehicles/Chimera_Attack" soundCount="8"/>
		<move sound="Units/AstraMilitarum/TooManyVoices/Vehicles/Chimera_Move" soundCount="8"/>
		<select sound="Units/AstraMilitarum/TooManyVoices/Vehicles/Chimera_Select" soundCount="4"/>
		<productionCompleted sound="Units/AstraMilitarum/TooManyVoices/Vehicles/Chimera_Complete" soundCount="1"/>
	</responses>
</unit>
