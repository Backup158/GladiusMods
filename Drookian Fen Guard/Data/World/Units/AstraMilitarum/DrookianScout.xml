<?xml version="1.0" encoding="utf-8"?>
<unit>
	<model>
		<unit mesh="Units/AstraMilitarum/Guardsman"
				material="Units/AstraMilitarum/Guardsman"
				idleAnimation="Units/AstraMilitarum/GuardsmanIdle"
				idleAnimationCount="3"
				idleContinuously="1"
				normalWeight="0.1"
				scale="1 1 1"
				bloodBone="ChestBone"
				walker="1"/>
	</model>
	<group size="3" rowSize="3" memberDeltaX="70" memberDeltaY="50"/>
	<weapons>
		<!-- Laspistol for stats, but Lasgun for appearance for compatibility -->
		<weapon name="Laspistol">
			<model>
				<beamWeapon mesh="Weapons/AstraMilitarum/GuardsmanLasgun"
						material="Weapons/AstraMilitarum/GuardsmanLasgun"
						bone="RightHandBone"
						muzzleBone="GuardsmanLasgunMuzzle0"
						fireInterval="0.5"/>
			</model>
		</weapon>
		<weapon name="FragGrenade" slotName="FragGrenade" enabled="0">
			<model>
				<grenadeWeapon muzzleBone="LeftHandBone"/>
			</model>
		</weapon>
		<weapon name="KrakGrenade" slotName="KrakGrenade" enabled="0">
			<model>
				<grenadeWeapon muzzleBone="LeftHandBone"/>
			</model>
		</weapon>
		<weapon name="MeltaBomb" slotName="MeltaBomb" enabled="0">
			<model>
				<grenadeWeapon muzzleBone="LeftHandBone"/>
			</model>		
		</weapon>
	</weapons>
	<modifiers>
		<modifier visible="0">
			<effects>
				<armor base="2"/> <!-- 4 | %armor base armor=5+ -->
				<foodUpkeep base="0.8"/> <!-- 1 | %foodUpkeep base tier=4 factor=1 -->
				<foodCost base="8"/> <!-- 10 %foodCost base tier=4 factor=0.5 -->
				<hitpointsMax base="1.6"/> <!-- 2 %hitpointsMax base toughness=3 wounds=1 -->
				<meleeAccuracy base="6"/> <!-- %meleeAccuracy base weaponSkill=3 -->
				<meleeAttacks base="1"/>
				<!-- <meleeInitiative base="3"/> -->
				<oreCost base="8"/> <!-- 10 %oreCost base tier=4 factor=0.5 -->
				<strengthDamage base="1"/> <!-- %strengthDamage base strength=3 -->
				<moraleMax base="4"/> <!-- 6 %moraleMax base leadership=6 -->
				<movementMax base="4"/>
				<productionCost base="22.0"/> <!-- 24 %productionCost base tier=4 factor=1 -->
				<rangedAccuracy base="8"/> <!-- 6 | %rangedAccuracy base ballisticSkill=3 -->
			</effects>
		</modifier>
	</modifiers>
	<strategyModifiers>
		<modifier>
			<effects>
				<increaseInfantryScore base="1.0"/>
			</effects>
		</modifier>
	</strategyModifiers>
	<actions>
		<attack>
			<model>
				<action animation="Units/AstraMilitarum/GuardsmanAttack"
						beginFire="0.35" endFire="2.5"/>
			</model>
		</attack>
		<die>
			<model>
				<action animation="Units/AstraMilitarum/GuardsmanDie"
						animationCount="3"
						sound="Units/MediumUnarmoredDie"
						soundCount="4"
						soundDelay="0.4"
						voiceSound="Units/AstraMilitarum/InfantryDie"
						voiceSoundCount="5"/>
			</model>		
		</die>
		<idle>
			<model>
				<action/>
			</model>
		</idle>
		<move>
			<model>
				<action animation="Units/AstraMilitarum/GuardsmanMove"
						sound="Units/AstraMilitarum/InfantryMove"
						soundCount="4"/>
			</model>
		</move>
		<throwGrenade weaponSlotName="FragGrenade" cooldown="10"
				requiredUpgrade="AstraMilitarum/FragGrenade">
			<model>
				<action animation="Units/AstraMilitarum/GuardsmanGrenade"
						beginFire="0.833333333333"/>
			</model>
		</throwGrenade>
		<throwGrenade weaponSlotName="KrakGrenade" cooldown="10"
				requiredUpgrade="AstraMilitarum/KrakGrenade">
			<model>
				<action animation="Units/AstraMilitarum/GuardsmanGrenade"
						beginFire="0.833333333333"/>
			</model>				
		</throwGrenade>
		<throwGrenade weaponSlotName="MeltaBomb" cooldown="10"
				requiredUpgrade="AstraMilitarum/LasDamage">
			<model>
				<action animation="Units/AstraMilitarum/GuardsmanGrenade"
						beginFire="0.833333333333"/>
			</model>				
		</throwGrenade>
		<mediPack cooldown="10" requiredUpgrade="AstraMilitarum/MediPack">
			<model>
				<action bone="ChestBone"
						sound="Actions/Heal"/>
			</model>
			<conditions>
				<unit>
					<damaged/>
				</unit>
			</conditions>
			<beginTargets>
				<selfTarget>
					<areas>
						<area affects="Unit">
							<modifiers>
								<modifier>
									<effects>
										<hitpointsFactorFromMax add="0.5"/>
									</effects>
								</modifier>
							</modifiers>
						</area>
					</areas>
				</selfTarget>
			</beginTargets>
		</mediPack>
		<!-- Scout Sentinel scans are cd 3 -->
		<scout consumedActionPoints="0"
				consumedMovement="0"
				cooldown="4"
				requiredActionPoints="0">
			<model>
				<action sound="Actions/Scan"/>
			</model>
			<beginTargets>
				<selfTarget>
					<areas>
						<area affects="Tile" radius="3">
							<modifiers>
								<modifier>
									<effects>
										<reveal/>
									</effects>
								</modifier>
							</modifiers>
						</area>
					</areas>
				</selfTarget>
			</beginTargets>
		</scout>
		<!-- Backline Harassment -->
		<!-- This is to simulate harassing attacks to psych out and mentally wear down enemy troops. Mostly like night time hit and runs. -->
		<!-- Scouts can harass more often -->
		<genericUnitAbility consumedActionPoints="0"
				consumedMovement="1"
				cooldown="2"
				name="AstraMilitarum/BacklineHarassment"
				icon="Traits/HellstormTemplate"
				requiredActionPoints="0">
			<model>
				<action animation="Units/AstraMilitarum/GuardsmanGrenade"
						beginFire="0.833333333333"
						sound="Units/AstraMilitarum/InfantryMove"
						soundCount="4"/>
			</model>
			<beginTargets>
				<!-- This may seem a bit silly but it's the best I got for practicality. 2 and they just shoot you unless you're behind cover, which is thematically appropriate yet so niche. 3 makes sense, almost as if stepping in, shooting, then running away. -->
				<target rangeMax="3">
					<conditions>
						<unit>
							<enemy/>
							<!-- This is like harassing fire from night time raids, so you're still affecting the crew's ability to sleep -->
							<!--
							<noTrait name="Vehicle"/>
							<noTrait name="Fortification"/> -->
							<!-- Unlike with FUCKING GODZILLA -->
							<noTrait name="MonstrousCreature"/>
						</unit>
					</conditions>
					<areas>
						<area affects="Unit">
							<modifiers>
								<modifier>
									<effects>
										<addTrait name="Harassed" duration="3"/>
									</effects>
								</modifier>
							</modifiers>
						</area>
					</areas>
				</target>
			</beginTargets>
		</genericUnitAbility>
	</actions>
	<traits>
		<trait name="ExtraInfantryArmour" requiredUpgrade="AstraMilitarum/ExtraInfantryArmour"/>
		<trait name="VoxCaster" requiredUpgrade="AstraMilitarum/VoxCaster"/>
		<trait name="AstraMilitarum/Drookian"/>
		<trait name="AstraMilitarum/DrookianSaboteur"/>
		<trait name="MoveThroughCover"/>
	</traits>
	<!-- Too Many Voices compatibility -->
	<responses>
		<action name="UseWeapon/FragGrenade" sound="Units/AstraMilitarum/TooManyVoices/Infantry/Guardsman_Attack" soundCount="8"/>
		<action name="UseWeapon/KrakGrenade" sound="Units/AstraMilitarum/TooManyVoices/Infantry/Guardsman_Attack" soundCount="8"/>
		<action name="MediPack" sound="Units/AstraMilitarum/TooManyVoices/Infantry/Guardsman_Ability_Med" soundCount="1"/>
		<attack sound="Units/AstraMilitarum/TooManyVoices/Infantry/Guardsman_Attack" soundCount="8"/>
		<move sound="Units/AstraMilitarum/TooManyVoices/Infantry/Guardsman_Move" soundCount="8"/>
		<select sound="Units/AstraMilitarum/TooManyVoices/Infantry/Guardsman_Select" soundCount="4"/>
		<productionCompleted sound="Units/AstraMilitarum/TooManyVoices/Infantry/Guardsman_Complete" soundCount="1"/>
	</responses>
</unit>
