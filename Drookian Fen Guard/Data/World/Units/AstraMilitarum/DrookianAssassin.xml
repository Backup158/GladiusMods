<?xml version="1.0" encoding="utf-8"?>
<unit spawnDistanceMin="6">
	<model>
		<unit mesh="Units/ChaosSpaceMarines/ChaosCultist"
				material="Units/ChaosSpaceMarines/ChaosCultist"
				idleAnimation="Units/ChaosSpaceMarines/ChaosCultistIdle"
				idleAnimationCount="3"
				idleContinuously="1"
				normalWeight="0.1"
				scale="0.8 0.8 0.8"
				bloodBone="Bone001"
				walker="1"/>
	</model>
	<!-- Group size was 3. Originally based on Arco Flagellants -->
	<group size="3" rowSize="3" memberDeltaX="64" memberDeltaY="64"/>
	<weapons>
		<!-- ArcoFlail -->
		<weapon name="AstraMilitarum/DrookianDaggers" count="2">
			<model>
				<weapon mesh="Weapons/SpaceMarines/RelicBlade"
						material="Weapons/SpaceMarines/RelicBlade"
						bone="Bone006"
						fireInterval="1.0"/>
			</model>
		</weapon>
	</weapons>
	<modifiers>
		<modifier visible="0">
			<effects>
				<armor base="2"/> <!-- 0, guardsmen have 4 | %armor base armor=- -->
				<hitpointsMax base="1.1"/> <!-- 2 | %hitpointsMax base toughness=3 wounds=1 -->
				<meleeAccuracy base="10"/> <!-- %meleeAccuracy base weaponSkill=5 -->
				<meleeAttacks base="1"/>
				<strengthDamage base="2"/> <!-- %strengthDamage base strength=5 -->
				<moraleMax base="4"/> <!-- 8 %moraleMax base leadership=7 -->
				<movementMax base="4"/> <!-- 3 -->
				<productionCost base="25.0"/> <!-- 30 | %productionCost base tier=5 factor=1 -->
				<oreUpkeep base="0.8"/> <!-- 1.5 | %requisitionsUpkeep base tier=5 factor=1 -->
				<oreCost base="10.0"/> <!-- 30 | %requisitionsCost base tier=5 factor=1 -->
				<foodUpkeep base="0.8"/> <!--  1%foodUpkeep base tier=4 factor=1 -->
				<foodCost base="8"/> <!-- 10 %foodCost base tier=4 factor=0.5 -->
				<rangedAccuracy base="2"/> <!-- %rangedAccuracy base ballisticSkill=1 -->
			</effects>
		</modifier>
	</modifiers>
	<strategyModifiers>
		<modifier>
			<effects>
				<increaseInfantryScore base="1.0"/>
			</effects>
		</modifier>
	</strategyModifiers>
	<actions>
		<attack>
			<model>
				<action animation="Units/ChaosSpaceMarines/ChaosCultistAttack"
						beginFire="0.1"
						endFire="0.12"
						chargeAnimation="Units/ChaosSpaceMarines/ChaosCultistCharge"
						chargeBeginFire="0.1"
						chargeEndFire="0.11"
						meleeAnimation="Units/ChaosSpaceMarines/ChaosCultistMelee"
						meleeBeginSwing="0.14"
						meleeEndSwing="0.7"/>
			</model>
		</attack>
		<die>
			<model>
				<action animation="Units/ChaosSpaceMarines/ChaosCultistDie"
						animationCount="2"
						sound="Units/MediumUnarmoredDie"
						soundCount="4"
						soundDelay="0.35"
						voiceSound="Units/AstraMilitarum/InfantryDie"
						voiceSoundCount="5"/>
			</model>		
		</die>
		<idle>
			<model>
				<action animationSpeed="1.0"/>
			</model>
		</idle>
		<move>
			<model>
				<action animation="Units/ChaosSpaceMarines/ChaosCultistMove"
						sound="Units/AstraMilitarum/InfantryMove"
						soundCount="4"/>
			</model>
		</move>
		<createSmokeScreen name="ThrowSmokeGrenade"
				cooldown="10"
				icon="Traits/SmokeScreen">
			<model>
				<action animation="Units/ChaosSpaceMarines/ChaosCultistWork"
						sound="Actions/SmokeScreen"/>
			</model>
			<beginTargets>
				<target rangeMax="2">
					<areas>
						<area affects="Tile">
							<modifiers>
								<modifier>
									<effects>
										<!-- Vehicle smoke on self is 3 -->
										<addFeature duration="2" name="SmokeScreen"/>
									</effects>
								</modifier>
							</modifiers>
						</area>
					</areas>
				</target>
			</beginTargets>
		</createSmokeScreen>
	</actions>
	<traits>
		<!-- Lictor Traits -->
		<trait name="Stealth"/>
		<trait name="HitAndRun"/> <!-- Ingore ZoC -->
		<trait name="MoveThroughCover" requiredUpgrade="AstraMilitarum/MediPack"/> <!-- Move through cover with T3 -->
		<trait name="Infiltrate" requiredUpgrade="AstraMilitarum/CityTier2"/> <!-- Infiltrate with T4 -->
		<!-- Drookian Fen Guardsmen Traits -->
		<trait name="ExtraInfantryArmour" requiredUpgrade="AstraMilitarum/ExtraInfantryArmour"/>
		<trait name="VoxCaster" requiredUpgrade="AstraMilitarum/VoxCaster"/>
		<trait name="AstraMilitarum/Drookian"/>
		<trait name="AstraMilitarum/DrookianSaboteur"/>
	</traits>
	<!-- Too Many Voices compatibility -->
	<responses>
		<action name="UseWeapon/FragGrenade" sound="Units/AstraMilitarum/TooManyVoices/Infantry/Guardsman_Attack" soundCount="8"/>
		<action name="UseWeapon/KrakGrenade" sound="Units/AstraMilitarum/TooManyVoices/Infantry/Guardsman_Attack" soundCount="8"/>
		<action name="MediPack" sound="Units/AstraMilitarum/TooManyVoices/Infantry/Guardsman_Ability_Med" soundCount="1"/>
		<attack sound="Units/AstraMilitarum/TooManyVoices/Infantry/Guardsman_Attack" soundCount="8"/>
		<move sound="Units/AstraMilitarum/TooManyVoices/Infantry/Guardsman_Move" soundCount="8"/>
		<select sound="Units/AstraMilitarum/TooManyVoices/Infantry/Guardsman_Select" soundCount="4"/>
		<productionCompleted sound="Units/AstraMilitarum/TooManyVoices/Infantry/Guardsman_Complete" soundCount="1"/>
	</responses>
</unit>
