<?xml version="1.0" encoding="utf-8"?>
<trait alwaysVisible="1" 
		category="Buff"
		visibilityCategory="Weapon"
		icon="Traits/Rampage">
	<modifiers>
		<!-- Exploit defenses: Increased attacks against enemies -->
		<!-- Separate so it can stack-->
		<modifier>
			<conditions>
				<encounter>
					<opponent>
						<!-- Having just moved. Like attacking while they're tired from marching -->
						<movedThisTurn/>
					</opponent>
				</encounter>
			</conditions>
			<effects>
				<meleeAttacks mul="0.17"/>
			</effects>
		</modifier>
		<modifier>
			<conditions>
				<encounter>
					<opponent>
						<!-- Sentry takedown: Good at clearing outposts-->
						<trait name="Outpost"/>
					</opponent>
				</encounter>
			</conditions>
			<effects>
				<meleeAttacks mul="0.17"/>
			</effects>
		</modifier>
		<!-- Assassination: Increased damage against heroes -->
		<modifier>
			<conditions>
				<encounter>
					<opponent>
						<trait name="Hero"/>
					</opponent>
				</encounter>
			</conditions>
			<effects>
				<damage mul="0.25"/>
			</effects>
		</modifier>
	</modifiers>
</trait>
