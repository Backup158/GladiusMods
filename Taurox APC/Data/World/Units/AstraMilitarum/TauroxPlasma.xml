<?xml version="1.0" encoding="utf-8"?>
<unit>
	<model>
		<unit mesh="Units/AstraMilitarum/Chimera"
				material="Units/AstraMilitarum/Chimera"
				idleAnimation="Units/AstraMilitarum/ChimeraIdle"
				idleAnimationCount="3"
				idleContinuously="1"
				scale="1.5 1.5 1.3"
				explosionsBone="Bone"
				uvAnimated="1"/>
	</model>
	<weapons>
		<!-- One plasma cannon, based on the space marine single gun -->
		<weapon name="TauroxPlasmaCannon">
			<model>
				<projectileWeapon muzzleBone=".MultiLaserMuzzle" fireInterval="0.2"/>
			</model>
		</weapon>
		<!-- throwing on a heavy flamer instead  -->
		<weapon name="HeavyFlamer" count="2"
                requiredUpgrade="AstraMilitarum/AdditionalHeavyBolters">
			<model>
				<flamerWeapon muzzleBone=".HeavyBolterMuzzle"/>
			</model>
		</weapon>
		<!-- Chimera has 2 -->
		<weapon name="TauroxBoltgunArray" count="2">
			<model>
				<projectileWeapon muzzleBone=".LasgunArrayMuzzle" muzzleCount="6"
						effectFaceWeight="0"
						cycleMuzzles="0"/>
			</model>
		</weapon>
		<!-- this also gets double mortars -->
		<weapon name="TauroxMannedMortar" count="2">
			<model>
				<missileWeapon muzzleBone="Bone"/>
			</model>
		</weapon>
		<weapon name="HunterKillerMissile" slotName="HunterKillerMissile"
				enabled="0">
			<model>
				<missileWeapon muzzleBone="Bone"/>
			</model>	
		</weapon>		
	</weapons>
	<modifiers>
		<modifier visible="0">
			<effects>
				<armor base="9"/> <!-- %armor base armor=12/10/10 |||||| Chimera base is 7, Leman Russ is 9; Taurox is 8 -->
				<cargoSlots base="3"/> <!-- %cargoSlots base capacity=12 |||||| Chimera base is 4. 9th edition codex says both have capacity of 12 -->
				<hitpointsMax base="42.0"/> <!-- %hitpointsMax base armor=12/10/10 wounds=3 |||||| Chimera base is 24, Leman Russ is 48; Taurox is 36 -->
				<moraleMax base="8"/> <!-- %moraleMax base leadership=7 |||||| Chimera base is 8 -->
				<movementMax base="4"/> <!-- Chimera base is 4 -->
				<oreUpkeep base="4.0"/> <!-- %oreUpkeep base tier=6 factor=1 |||||| Chimera base is 2, Leman Russ is 4 -->
				<oreCost base="85.0"/> <!-- %oreCost base tier=6 factor=1 |||||| Chimera base is 40, Leman Russ is 80; Taurox is 60 -->
				<productionCost base="52.0"/> <!-- %productionCost base tier=6 factor=1 |||||| Chimera base is 36,  Leman Russ is 48 on wiki-->
				<rangedAccuracy base="6"/> <!-- %rangedAccuracy base ballisticSkill=3 -->
			</effects>
		</modifier>
	</modifiers>
	<strategyModifiers>
		<modifier>
			<effects>
				<increaseVehiclesScore base="1.0"/>
			</effects>
		</modifier>
	</strategyModifiers>
	<actions>
		<attack>
			<model>
				<action animation="Units/AstraMilitarum/ChimeraAttack"
						beginFire="0.77"
						endFire="2.6"/>
			</model>				
		</attack>
		<die>
			<model>
				<action animation="Units/AstraMilitarum/ChimeraDie0"
						sound="Units/MediumVehicleDie"
						soundCount="3"
						soundDelay="0.2"/>
			</model>
		</die>
		<move>
			<model>
				<action animation="Units/AstraMilitarum/ChimeraMove"
						sound="Units/AstraMilitarum/TankMove"
						soundCount="3"/>
			</model>
		</move>
		<createSmokeScreen cooldown="10"
				icon="Traits/SmokeScreen"
				requiredUpgrade="AstraMilitarum/SmokeLauncher">
			<model>
				<action sound="Actions/SmokeScreen"/>
			</model>
			<beginTargets>
				<selfTarget>
					<areas>
						<area affects="Tile">
							<modifiers>
								<modifier>
									<effects>
										<addFeature duration="3" name="SmokeScreen"/>
									</effects>
								</modifier>
							</modifiers>
						</area>
					</areas>
				</selfTarget>
			</beginTargets>
		</createSmokeScreen>
		<useWeapon weaponSlotName="HunterKillerMissile"
				cooldown="10"
				requiredUpgrade="AstraMilitarum/HunterKillerMissile">
			<model>
				<action beginFire="0.1" endFire="1.0"/>
			</model>
		</useWeapon>
	</actions>
	<traits>
		<trait name="CamoNetting" requiredUpgrade="AstraMilitarum/CamoNetting"/>
		<trait name="DozerBlade" requiredUpgrade="AstraMilitarum/DozerBlade"/>
		<trait name="ExtraVehicleArmour" requiredUpgrade="AstraMilitarum/ExtraVehicleArmour"/>
		<trait name="MobileCommand"/>
		<trait name="RecoveryGear" requiredUpgrade="AstraMilitarum/RecoveryGear"/>
		<trait name="RelicPlating" requiredUpgrade="AstraMilitarum/RelicPlating"/>
		<trait name="Tank"/>
		<trait name="Transport"/>
		<trait name="Vehicle"/>
		<trait name="AssaultVehicle"/>
	</traits>
	<!-- Too Many Voices compatibility -->
	<responses>
		<action name="CreateSmokeScreen" sound="Units/AstraMilitarum/TooManyVoices/Vehicles/Chimera_Ability_Smoke" soundCount="2"/>
		<action name="HunterKillerMissile" sound="Units/AstraMilitarum/TooManyVoices/Vehicles/Chimera_Ability_HunterKiller" soundCount="2"/>
		<attack sound="Units/AstraMilitarum/TooManyVoices/Vehicles/Chimera_Attack" soundCount="8"/>
		<move sound="Units/AstraMilitarum/TooManyVoices/Vehicles/Chimera_Move" soundCount="8"/>
		<select sound="Units/AstraMilitarum/TooManyVoices/Vehicles/Chimera_Select" soundCount="4"/>
		<productionCompleted sound="Units/AstraMilitarum/TooManyVoices/Vehicles/Chimera_Complete" soundCount="1"/>
	</responses>
</unit>
