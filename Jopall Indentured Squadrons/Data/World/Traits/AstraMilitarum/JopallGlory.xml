<?xml version="1.0" encoding="utf-8"?>
<trait category="Buff" icon="Attributes/Influence">
	<modifiers>
		<modifier>
			<effects>
				<influencePerCombatFromUpkeepFactor add="3.0"/>
			</effects>
		</modifier>
		<modifier requiredUpgrade="AstraMilitarum/LasDamage"> <!-- T4 instead of T5 -->
			<effects>
				<influencePerCombatFromUpkeepFactor mul="0.33"/>
			</effects>
		</modifier>
	</modifiers>
	<!-- Grant bounty on Hero killed -->
	<onEnemyKilledSelfModifiers>
		<modifier>
			<conditions>
				<encounter>
					<opponent>
						<trait name="Hero"/>
					</opponent>
				</encounter>
			</conditions>
			<effects>
				<addTrait name="AstraMilitarum/JopallBounty" duration="1"/>
			</effects>
		</modifier>
	</onEnemyKilledSelfModifiers>
</trait>
