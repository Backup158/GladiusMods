		<!-- Mugging Ability -->
        <genericUnitAbility 
                name="AstraMilitarum/Mugging"
                icon="Attributes/Morale">
            <model>
				<action sound="Impacts/KineticUnarmored" soundCount="6"/>
			</model>
            <!-- Make it player only -->
            <conditions>
				<player>
                    <!-- <aiControlled/> -->
                    <notAIControlled/>
                </player>
			</conditions>
			<beginTargets>
                <!-- Damage Ally -->
				<target rangeMin="1" rangeMax="1">
					<conditions>
						<unit>
							<allied/>
							<noTrait name="Fortification"/>
							<noTrait name="Vehicle"/>
						</unit>
					</conditions>
					<areas>
						<area affects="Unit">
							<modifiers>
								<modifier>
									<effects>
										<hitpoints add="-4"/>
                                        <morale add="-60"/>
									</effects>
								</modifier>
							</modifiers>
						</area>
					</areas>
				</target>
                <!-- Money money money! -->
                <selfTarget>
					<areas>
						<area affects="Unit">
							<modifiers>
                                <modifier>
                                    <!-- If Commissar is nearby, get fucking shot -->
                                    <conditions>
                                        <unit match="Any">
                                            <!-- Regular Commissar -->
                                            <unitsInRange count="1" range="2">
                                                <!-- <type name="AstraMilitarum/LordCommissar"/> -->
                                                <allied/>
												<faction name="AstraMilitarum"/>
												<trait name="Hero"/>
												<trait name="Stubborn"/> <!-- Every commissar should have this trait -->
                                            </unitsInRange>
                                        </unit>
                                    </conditions>
									<effects>
										<hitpoints add="-12"/>
                                        <morale add="-60"/>
									</effects>
								</modifier>
                                <!-- Get Influence -->
								<modifier>
									<effects>
										<!-- <influence add="8"/> --> 
                                        <addTrait name="AstraMilitarum/MuggingSpoils" duration="1"/>
									</effects>
								</modifier>
							</modifiers>
						</area>
					</areas>
				</selfTarget>
			</beginTargets>
		</genericUnitAbility>
	</actions>
	<traits>
		<trait name="ExtraInfantryArmour" requiredUpgrade="AstraMilitarum/ExtraInfantryArmour"/>
        <trait name="VoxCaster" requiredUpgrade="AstraMilitarum/VoxCaster"/>
        <trait name="AstraMilitarum/ArmageddonOrks"/>
        <trait name="AstraMilitarum/JopallCity"/>
        <trait name="AstraMilitarum/JopallGlory"/>
		<trait name="Infiltrate"/>
		<trait name="Stealth"/>
		<trait name="SniperReposition"/>

		<trait name="Bulky"/>
		<trait name="AstraMilitarum/BattalionRatling"/>
		<trait name="AstraMilitarum/StrengthInNumbers" requiredUpgrade="AstraMilitarum/StrengthInNumbers"/>
	</traits>
