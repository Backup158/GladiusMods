<?xml version="1.0" encoding="utf-8"?>
<unit dlc="Supplement8">
	<model>
		<unit mesh="Units/AstraMilitarum/Guardsman"
				material="Units/AstraMilitarum/Guardsman"
				idleAnimation="Units/AstraMilitarum/GuardsmanIdle"
				idleAnimationCount="3"
				idleContinuously="1"
				normalWeight="0.1"
				scale="1 1 1"
				bloodBone="ChestBone"
				walker="1"/>
	</model>
	<group size="12" rowSize="4" memberDeltaX="70" memberDeltaY="50"/>
	<weapons>
		<weapon name="AstraMilitarum/JopallLasgun">
			<model>
				<beamWeapon mesh="Weapons/AstraMilitarum/GuardsmanLasgun"
						material="Weapons/AstraMilitarum/GuardsmanLasgun"
						bone="RightHandBone"
						muzzleBone="GuardsmanLasgunMuzzle0"
						fireInterval="10"/>
			</model>
		</weapon>
        <weapon name="FragGrenade" slotName="FragGrenade" enabled="0">
			<model>
				<grenadeWeapon muzzleBone="LeftHandBone"/>
			</model>
		</weapon>
		<weapon name="KrakGrenade" slotName="KrakGrenade" enabled="0">
			<model>
				<grenadeWeapon muzzleBone="LeftHandBone"/>
			</model>
		</weapon>
	</weapons>
	<modifiers>
		<modifier visible="0">
			<effects>
				<armor base="4"/> <!-- %armor base armor=5+ -->
				<foodUpkeep base="6.0"/> <!-- %foodUpkeep base tier=5 factor=1 -->
                <influenceUpkeep base="8.0"/> <!-- Flashgitz is 2. Food upkeep is x6 but Direct cost is x4 to get to 60. I'd rather not have 12 upkeep since the gain would be insane -->
				<foodCost base="60.0"/> <!-- %foodCost base tier=5 factor=0.5 -->
				<hitpointsMax base="2.0"/> <!-- %hitpointsMax base toughness=2 wounds=1 -->
				<meleeAccuracy base="4"/> <!-- %meleeAccuracy base weaponSkill=2 -->
				<meleeAttacks base="1"/>
				<oreCost base="60.0"/> <!-- %oreCost base tier=5 factor=0.5 -->
				<strengthDamage base="1"/> <!-- %strengthDamage base strength=2 -->
				<moraleMax base="6"/> <!-- %moraleMax base leadership=6 -->
				<movementMax base="3"/>
				<productionCost base="54.0"/> <!-- %productionCost base tier=5 factor=1 -->
				<rangedAccuracy base="8"/> <!-- %rangedAccuracy base ballisticSkill=4 -->
			</effects>
		</modifier>
	</modifiers>
	<strategyModifiers>
		<modifier>
			<effects>
				<increaseInfantryScore base="1.0"/>
			</effects>
		</modifier>
	</strategyModifiers>
	<actions>
		<attack>
			<model>
				<action animation="Units/AstraMilitarum/GuardsmanAttack"
						beginFire="1.3" endFire="1.4"/>
			</model>
		</attack>
		<die>
			<model>
				<action animation="Units/AstraMilitarum/GuardsmanDie"
						animationCount="2"
						sound="Units/MediumUnarmoredDie"
						soundCount="4"
						soundDelay="0.4"
						voiceSound="Units/AstraMilitarum/InfantryDie"
						voiceSoundCount="5"/>
			</model>		
		</die>
		<idle>
			<model>
				<action/>
			</model>
		</idle>
		<move>
			<model>
				<action animation="Units/AstraMilitarum/GuardsmanMove"
						sound="Units/AstraMilitarum/InfantryMove"
						soundCount="4"/>
			</model>
		</move>
        <throwGrenade weaponSlotName="FragGrenade" cooldown="10">
			<model>
				<action animation="Units/AstraMilitarum/GuardsmanGrenade"
						beginFire="0.833333333333"/>
			</model>
            <!-- Using equipment costs money -->
			<modifiers>
				<modifier visible="1">
					<effects>
						<influenceCost base="16"/>
					</effects>
				</modifier>
			</modifiers>
		</throwGrenade>
		<throwGrenade weaponSlotName="KrakGrenade" cooldown="10">
			<model>
				<action animation="Units/AstraMilitarum/GuardsmanGrenade"
						beginFire="0.833333333333"/>
			</model>
            <!-- Using equipment costs money -->
			<modifiers>
				<modifier visible="1">
					<effects>
						<influenceCost base="16"/>
					</effects>
				</modifier>
			</modifiers>				
		</throwGrenade>
		<mediPack cooldown="10">
			<model>
				<action bone="ChestBone"
						sound="Actions/Heal"/>
			</model>
            <!-- Using equipment costs money -->
			<modifiers>
				<modifier visible="1">
					<effects>
						<influenceCost base="16"/>
					</effects>
				</modifier>
			</modifiers>
			<conditions>
				<unit>
					<damaged/>
				</unit>
			</conditions>
			<beginTargets>
				<selfTarget>
					<areas>
						<area affects="Unit">
							<modifiers>
								<modifier>
									<effects>
										<hitpointsFactorFromMax add="0.5"/>
									</effects>
								</modifier>
							</modifiers>
						</area>
					</areas>
				</selfTarget>
			</beginTargets>
		</mediPack>
		<!-- Downgrade or Upcharge Shot -->
		<hammerOfWrath consumedActionPoints="0" 
				consumedMovement="0"
				cooldown="1"
				name="AstraMilitarum/JopallChargeDown"
				icon="Traits/Blinding">
			<model>
				<action sound="Actions/InstallSupportSystem"/>
			</model>
			<sharedCooldowns>
				<action name="AstraMilitarum/JopallChargeUp"/>
			</sharedCooldowns>
			<beginTargets>
				<selfTarget>
					<areas>
						<area affects="Unit">
							<modifiers>
								<modifier>
									<effects>
										<addTrait name="AstraMilitarum/JopallChargeDown2" duration="1"/>
									</effects>
								</modifier>
							</modifiers>
						</area>
					</areas>
				</selfTarget>
			</beginTargets>
		</hammerOfWrath>
		<!-- Charge up shot -->
		<hammerOfWrath consumedActionPoints="0" 
				consumedMovement="0"
				cooldown="1"
				name="AstraMilitarum/JopallChargeUp"
				icon="Traits/DestroyerWeapon">
			<model>
				<action sound="Actions/InstallSupportSystem"/>
			</model>
			<modifiers>
				<modifier visible="1">
					<effects>
						<influenceCost base="6"/>
					</effects>
				</modifier>
			</modifiers>
			<sharedCooldowns>
				<action name="AstraMilitarum/JopallChargeDown"/>
			</sharedCooldowns>
			<beginTargets>
				<selfTarget>
					<areas>
						<area affects="Unit">
							<modifiers>
								<modifier>
									<effects>
										<addTrait name="AstraMilitarum/JopallChargeUp" duration="1"/>
									</effects>
								</modifier>
							</modifiers>
						</area>
					</areas>
				</selfTarget>
			</beginTargets>
		</hammerOfWrath>
